{
    "name": "Hilite URL",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Hilite"
    },
    "icons": {
        // "16": "icon16.png",
        // "48": "icon48.png",
        "128": "icon128.png"
    }
}